'Run autogen'

PUBLIC SUB Button1_Click()

  
   DIM sOutput AS String
   DIM indirizzo AS String

   indirizzo = DirChooser1.SelectedPath

   SHELL "cd " & indirizzo & " && " & " ./autogen.sh " WAIT TO sOutput
  TextArea1.Text = sOutput


END

'Run configure'

PUBLIC SUB Button2_Click()

  
   DIM sOutput AS String
